{
    "name": "remp/sso",
    "description": "REMP SSO",
    "keywords": ["remp", "sso"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../Composer/laravel-sso",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "../Composer/laravel-widgets",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "../Composer/laravel-helpers",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "php": "^7.3",
        "arrilot/laravel-widgets": "3.13.1",
        "deployer/deployer": "^6.8",
        "deployer/recipes": "^6.2",
        "fideloper/proxy": "4.4.0",
        "fzaninotto/faker": "~1.9",
        "kouz/laravel-airbrake": "^0.4",
        "laracasts/flash": "3.2",
        "laravel/framework": "5.7.*",
        "laravel/socialite": "4.4.1",
        "laravelcollective/html": "5.7.*",
        "league/uri": "^5.3",
        "php-amqplib/php-amqplib": "^2.12",
        "predis/predis": " ~1.1",
        "recca0120/laravel-tracy": "~1.10.0",
        "remp/laravel-helpers": "*",
        "remp/laravel-sso": "*",
        "remp/laravel-widgets": "*",
        "tymon/jwt-auth": "^1.0",
        "ukfast/laravel-health-check": "^1.5",
        "yajra/laravel-datatables-oracle": "v8.13.7"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.8",
        "friendsofphp/php-cs-fixer": "2.16.4",
        "mockery/mockery": "^1.4",
        "nunomaduro/collision": "^2.1.1",
        "phpunit/phpunit": "9.3.11"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
